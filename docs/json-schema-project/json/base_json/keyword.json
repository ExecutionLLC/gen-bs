{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Keyword Title",
	"type": "object",
	"properties": {
		"id": {
			"description": "The unique identifier for a keyword",
			"type": "integer"
		},
		"name": {
			"type": "string"
		},
		"synonyms": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "number"
					},
					"name": {
						"type": "string"
					}
				}
			}
		}
	},
	"required": [
		"id"
	]
}
