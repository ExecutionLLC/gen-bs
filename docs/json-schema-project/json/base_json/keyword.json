{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Keyword Title",
	"type": "object",
	"properties": {
		"id": {
			"description": "UUID, the unique identifier for a keyword",
			"type": "string"
		},
		"field_id": {
			"type": "string",
			"description": "UUID of the corresponding field."
		},
		"value": {
			"type": "string",
			"maxLength": 50
		},
		"synonyms": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"keyword_id": {
						"type": "string",
						"description": "UUID of the keyword for this synonym"
					},
					"value": {
						"type": "string",
						"maxLength": 50
					}
				}
			}
		}
	},
	"required": [
		"id"
	]
}
