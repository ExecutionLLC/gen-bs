{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Keyword Title",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"description": "UUID, the unique identifier for a keyword"
		},
		"field_id": {
			"type": "string",
			"description": "UUID of the corresponding field."
		},
		"name": {
			"type": "string"
		},
		"value": {
			"type": "string",
			"maxLength": 50
		},
		"text": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties":{
					"languageId": {
						"type":"string"
					},
					"value": {
						"description": "Display text for the keyword",
						"type": "string"
					}
				}
			}
		}
	},
	"required": [
		"id"
	]
}
