{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Vcf Field metadata",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "UUID, the unique identifier for the field metadata"
    },
    "is_editable": {
      "type": "boolean"
    },
    "is_invisible": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "value_type": {
      "type": "string",
      "enum": [
        "float",
        "integer",
        "char",
        "string",
        "boolean"
      ]
    },
    "available_values": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties":{
          "id": {
            "type":"string"
          },
          "text": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties":{
                "languageId": {
                  "type":"string"
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "text": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties":{
          "languageId": {
            "type":"string"
          },
          "label": {
            "description": "Display text for the field",
            "type": "string"
          },
          "description": {
            "description": "Text description for tooltip",
            "type": "string"
          }
        }
      }
    }
  }
}