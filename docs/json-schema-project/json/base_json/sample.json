{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"id": {
			"type": "number"
		},
		"hash": {
			"type": "string"
		},
		"metadata": {
			"$ref": "./sample_metadata.json#"
		},
		"analysis_date": {
			"type": "string",
			"format": "date-time"
		},
		"vcf_fields": {
			"type": "array",
			"items": {
				"$ref": "./vcf_field.json#"
			}
		},
		"is_analysed": {
			"type": "boolean"
		},
		"commentaries": {
			"type": "array",
			"items": {
				"$ref": "./commentary.json#"
			}
		}
	},
	"required": [
		"id",
		"hash",
		"is_analysed"
	]
}
