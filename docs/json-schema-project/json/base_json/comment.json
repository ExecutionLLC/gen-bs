{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"reference": {
			"type": "string",
			"maxLength": 50
		},
		"chrom": {
			"type": "string",
			"maxLength": 50
		},
		"pos": {
			"type": "integer"
		},
		"alt": {
			"type": "string",
			"maxLength": 50
		},
		"text": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties":{
					"languageId": {
						"type":"string"
					},
					"comment": {
						"type": "string",
						"maxLength": 1000
					}
				}
			}
		}
	},
	"required": [
		"reference",
		"chrom",
		"pos",
		"comment"
	]
}
