{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Vcf Field metadata",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"description": "UUID, the unique identifier for the field metadata"
		},
		"name": {
			"description": "Text Label",
			"type": "string"
		},
		"hyperlinkTemplate": {
			"description": "Template for hyperlink fileds",
			"type": "string"
		},
		"isHyperlink": {
			"description": "Mark for  hyperlink fields",
			"type": "boolean"
		},

		"isInvisible": {
			"description": "Mark invisible fields",
			"type": "boolean"
		},
		"source_name": {
			"type": "string",
			"description": "Name of the source. Should be equal to id for user-uploaded samples."
		},
		"value_type": {
			"type": "string",
			"description": "Value type which is got from the VCF file.",
			"enum": [
				"float",
				"integer",
				"char",
				"string",
				"boolean"
			]
		},
		"is_mandatory": {
			"type": "boolean"
		},
		"dimension": {
			"type": "integer",
			"description": "Possible number of values in the field. Comes from application server. When name, type and dimension are the same, fields are considered the same"
		},
		"keywords": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "../base_json/keyword.json#"
			}
		},
		"text": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties":{
					"languageId": {
						"type":"string"
					},
					"label": {
						"description": "Display text for the field",
						"type": "string"
					},
					"description": {
						"description": "Text description for tooltip",
						"type": "string"
					}
				}
			}
		}
	},
	"required": [
		"id",
		"name",
		"label",
		"description",
		"is_editable"
	]
}