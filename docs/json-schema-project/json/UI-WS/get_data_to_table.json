{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Describes request to WS for main table data.",
  "type": "object",
  "properties": {
    "sample_id": {
      "type": "string",
      "description": "Sample id"
    },
    "view": {
      "$ref": "../base_json/view.json#"
    },
    "filters": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "../base_json/filter.json#"
      }
    },
    "search_value": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "field_controls": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "../base_json/keyword.json#"
      }
    },
    "limit": {
      "type": "integer"
    },
    "offset": {
      "type": "integer"
    }
  },
  "required": [
    "sample_id",
    "view",
    "filters",
    "search_value",
    "field_controls",
    "limit",
    "offset"
  ]
}