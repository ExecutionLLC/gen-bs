{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Describes request to WS for main table data.",
  "type": "object",
  "properties": {
    "sample_id": {
      "type": "string",
      "description": "Sample id"
    },
    "view_id": {
      "type": "string",
      "description": "Id of the chosen view."
    },
    "filter_ids": {
      "type": "array",
      "description": "One or more filters. User is expected to choose at least one.",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "global_search_value": {
      "type": "string"
    },
    "field_search_values": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "parameters": {
          "field_id": {
            "type": "string",
            "description": "Id of the field"
          },
          "value": {
            "type":"string",
            "description": "Text in the search control."
          }
        }
      }
    },
    "limit": {
      "type": "integer"
    },
    "offset": {
      "type": "integer"
    }
  },
  "required": [
    "sample_id",
    "view",
    "filters",
    "search_value",
    "field_controls",
    "limit",
    "offset"
  ]
}