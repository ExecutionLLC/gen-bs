{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "v1.set_filter",
  "title": "set_filter - backend API function",
  "description": "updates column filter. Full set of filters is always overwritten",
  "type": "object",
  "properties": {
    "params": {
      "type": "object",
      "properties": {
        "global_search": {
          "type": "string",
          "description": "global search string value"
        },
        "filters": {
          "type": "array",
          "description": "list of filters",
          "items": {
            "$ref": "base_json/column_filter.json#"
          }
        }
      }
    },
    "result": {}
  }
}