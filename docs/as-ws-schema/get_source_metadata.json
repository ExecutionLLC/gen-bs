{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "v1.get_source_metadata",
    "title": "get_source_metadata - backend API function",
    "description": "returns source metadata by source name",
    "type": "object",
    "properties": {
        "params": {
            "type": "string",
            "description": "name of the source DB",
            "example": "db_1.h5"
        },
        "result": {
            "type": "object",
            "properties": {
                "reference": {
                    "type": "string",
                    "description": "string id of assemblies reference"
                },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "description": "list of columns metadata",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "name of the column"
                            },
                            "is_mandatory": {
                                "type": "boolean",
                                "description": "true - column is mandatory for VCF format, false - column is part of INFO field"
                            },
                            "num": {
                                "type": "integer",
                                "description": "number of values per row"
                            },
                        "type": {
                                "type": "string",
                                "description": "type of the column data"
                            },
                            "desc": {
                                "type": "string",
                                "description": "short description from VCF file"
                            }
                        }
                    }
                }
            }
        }
    }
}