{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "v1.search_in_results",
  "title": "search in results - backend API function",
  "description": "updates column filter and/or global filter and/or sort order",
  "type": "object",
  "properties": {
    "params": {
      "type": "object",
      "properties": {
        "column_filters": {
          "type": "array",
          "description": "list of filters",
          "items": {
            "$ref": "base_json/column_filter.json#"
          }
        },
        "global_filter": {
          "type": "string",
          "description": "global search string value"
        },
        "sort_order": {
          "type": "array",
          "items": {
            "$ref": "base_json/sort_order.json#"
          }
        }
      }
    },
    "result": {}
  }
}