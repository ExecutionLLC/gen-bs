{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "description of the file structure",
  "type": "object",
  "properties": {
    "reference": {
      "type": "string",
      "description": "string id of assemblies reference"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "list of columns metadata",
        "properties": {
          "name": {
            "type": "string",
            "description": "name of the column"
          },
          "is_mandatory": {
            "type": "boolean",
            "description": "true - column is mandatory for VCF format, false - column is part of INFO field"
          },
          "num": {
            "type": "integer",
            "description": "number of values per row (1 - one value, -1 - same as number of mutations, 0 - any)"
          },
          "type": {
            "type": "string",
            "description": "type of the column data",
            "enum": [
              "float",
              "char",
              "integer",
              "string",
              "boolean"
            ]
          },
          "desc": {
            "type": "string",
            "description": "short description from VCF file"
          }
        }
      }
    }
  }
}