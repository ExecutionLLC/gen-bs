{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "apply complex filter and load data in redis",
  "type": "object",
  "properties": {
    "id": {
      "description": "Id of the search session",
      "type": "string"
    },
    "method": {
      "type": "string",
      "enum": [
        "v1.open_session"
      ]
    },
    "params": {
      "type": "object",
      "sample": {
        "type": "string",
        "description": "File name for default samples or sample id for the default samples."
      },
      "view_structure": {
        "$ref": "./base_json/view.json#",
        "description": "view for loading"
      },
      "view_filter": {
        "type": "object",
        "params": {
          "type": "object",
          "description": "filter for loading (should be similar to the fronted filter, but has addition field 'source_name')"
        }
      },
      "view_sort_order": {
        "type": "array",
        "items": {
          "$ref": "./base_json/sort_order.json#"
        }
      }
    }
  }
}