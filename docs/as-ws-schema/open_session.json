{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "v1.open_session",
  "title": "open_session - backend API function",
  "description": "apply complex filter and load data in redis",
  "type": "object",
  "properties": {
    "params": {
      "type": "object",
      "user_filename": {
        "type": "string",
        "description": "name of the user file"
      },
      "filter": {
        "type": "object",
        "params": {
          "type": "object",
          "description": "filter for loading (should be simulare to the fronted filter, but has addition field 'source_name')"
        }
      },
      "view": {
        "$ref": "base_json/view.json#",
        "description": "view for loading"
      }
    },
    "result": {
      "$ref": "base_json/session_state.json#"
    }
  }
}