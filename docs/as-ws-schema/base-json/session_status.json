{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "file session status",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "description": "GUID of the file session"
    },
    "session_state": {
      "enum": [
        "loading",
        "filtering",
        "ready"
      ]
    },
    "redis_db": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "url of the redis"
        },
        "number": {
          "type": "integer",
          "description": "redis DB number"
        }
      }
    },
    "column_filter": {
      "type": "object",
      "description": "contains state of the column filter",
      "properties": {
        "index": {
          "type": "string",
          "description": "name of the redis key"
        },
        "status": {
          "type": "object",
          "properties": {
            "passed": {
              "type": "integer",
              "description": "number of elements, which passed filters condition"
            },
            "progress": {
              "type": "integer",
              "description": "progress of operation in %"
            }
          }
        },
        "filters": {
          "type": "array",
          "description": "list of column filters",
          "items": {
            "$ref": "column_filter.json#"
          }
        }
      }
    },
    "sort": {
      "type": "object",
      "description": "contains state of the sort order",
      "properties": {
        "index": {
          "type": "string",
          "description": "name of the redis key"
        },
        "status": {
          "enum": [
            "running",
            "ready"
          ],
          "description": "status of the sort operation"
        },
        "sort_order": {
          "type": "array",
          "description": "ordered list of the columns for sorting",
          "items": {
            "$ref": "sort_order.json#"
          }
        }
      }
    }
  }
}